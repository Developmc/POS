<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_top"
    android:background="@drawable/shape_circular_bead"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingStart="@dimen/margin_start"
        android:paddingEnd="@dimen/margin_start"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/margin_bottom"
            android:verticalSpacing="@dimen/margin_bottom"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            android:overScrollMode="never"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/shape_circular_bead_gray_light_light_bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space_distance"
            android:padding="@dimen/margin_bottom"
            android:background="@color/gray_light"
            android:src="@mipmap/back"/>
        <!--
        <Button
            android:id="@+id/bt_memberDetails"
            style="@style/text_style_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_sure_blue_selector"
            android:text="@string/manager_process"
            android:paddingLeft="@dimen/space_distance"
            android:paddingRight="@dimen/space_distance"/>
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_sure_blue_selector"
            android:paddingRight="@dimen/space_distance"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/manager_process_padding"
                android:src="@mipmap/ico_managerprocess"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_bottom_bar"
                android:gravity="center"
                android:text="@string/manager_process"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_distance"
            android:padding="@dimen/margin_bottom"
            android:background="@color/gray_light"
            android:src="@mipmap/forward"/>
    </LinearLayout>
</LinearLayout>