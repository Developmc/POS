<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_circular_bead"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_circular_bead"
        android:layout_marginTop="@dimen/center_panel_margin"
        android:layout_marginLeft="@dimen/center_panel_margin"
        android:layout_marginRight="@dimen/center_panel_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/item_title"/>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:scrollbars="none"
            android:dividerHeight="@dimen/margin_bottom"
            android:overScrollMode="never" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@drawable/shape_circular_bead_gray_bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_white"
            android:text="@string/products_membership"
            android:background="@drawable/shape_rect"
            android:padding="@dimen/item_rect_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_style_white"
            android:text="@string/x"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_rect"
            android:padding="@dimen/item_rect_padding"
            />
        <EditText
            android:id="@+id/bt_invoiceNo"
            style="@style/editText_style_white"
            android:imeOptions="flagNoExtractUi"/>
    </LinearLayout>
</LinearLayout>