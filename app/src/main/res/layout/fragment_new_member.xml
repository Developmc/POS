                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_circular_bead_small"
                            android:layout_marginLeft="@dimen/space_distance" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/new_member_textview_style"
                        android:text="@string/gender" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
