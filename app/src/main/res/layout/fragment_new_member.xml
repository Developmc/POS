<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/gray_deep"
    android:padding="@dimen/space_distance"
    tools:context="com.example.multiable.pos.Fragment.NewMemberFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_title_height"
            android:background="@drawable/shape_circular_bead_blue_title">
            <TextView
                android:layout_marginLeft="@dimen/space_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/text_style_white"
                android:text="@string/member_registration"/>
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_marginRight="@dimen/space_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_cancel_white"/>
            <ImageView
                android:id="@+id/iv_sure"
                android:layout_toLeftOf="@+id/iv_cancel"
                android:background="@drawable/selector_sure_white"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--android:background="@drawable/selector_sure_white"-->
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/divider_new_member"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circular_bead_gray_bottom"
            android:orientation="vertical"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_new_member_height"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/new_member_textview_style"
                        android:text="@string/membership_category" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_circular_bead_small"
                            android:layout_marginLeft="@dimen/space_distance" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/margin_left"
                            android:src="@mipmap/forward_gray"/>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/new_member_textview_style"
                        android:text="@string/membership_no" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_circular_bead_small"
                            android:layout_marginLeft="@dimen/space_distance" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/new_member_textview_style"
                        android:text="@string/membership_card_no" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_circular_bead_small"
                            android:layout_marginLeft="@dimen/space_distance" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/new_member_textview_style"
                        android:text="@string/contact_no" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_circular_bead_small"
                            android:layout_marginLeft="@dimen/space_distance" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/new_member_textview_style"
                        android:text="@string/title" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_circular_bead_small"
                            android:layout_marginLeft="@dimen/space_distance" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/margin_left"
                            android:src="@mipmap/forward_gray"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_new_member_height"
                    android:orientation="horizontal">
                    <TextView
