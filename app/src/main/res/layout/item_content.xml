<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/gray_light_selector"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_content_height">
    <TextView
        android:id="@+id/tv_item"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/item_content_height"
        android:gravity="center"
        android:text="@string/item"/>
    <View
        android:background="@color/gray_light"
        android:layout_width="1dp"
        android:layout_height="@dimen/item_content_height"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="@dimen/item_content_height"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="describe"/>
        <TextView
            android:id="@+id/tv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="size"/>
    </LinearLayout>
    <View
        android:background="@color/gray_light"
        android:layout_width="1dp"
        android:layout_height="@dimen/item_content_height"/>
    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/item_content_height"
        android:gravity="center"
        android:text="@string/item"/>
    <View
        android:background="@color/gray_light"
        android:layout_width="1dp"
        android:layout_height="@dimen/item_content_height"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="@dimen/item_content_height">
        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/item_rect_padding"
            android:background="@drawable/shape_rect_dashed"
            android:text="@string/item"/>
    </LinearLayout>

    <View
        android:background="@color/gray_light"
        android:layout_width="1dp"
        android:layout_height="@dimen/item_content_height"/>
    <TextView
        android:id="@+id/tv_unitPrice"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="@dimen/item_content_height"
        android:gravity="center"
        android:text="@string/item"/>
    <View
        android:background="@color/gray_light"
        android:layout_width="1dp"
        android:layout_height="@dimen/item_content_height"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="@dimen/item_content_height">
        <TextView
            android:id="@+id/tv_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/item_rect_padding"
            android:background="@drawable/shape_rect_dashed"
            android:text="@string/item"/>
    </LinearLayout>
    <View
        android:background="@color/gray_light"
        android:layout_width="1dp"
        android:layout_height="@dimen/item_content_height"/>
    <TextView
        android:id="@+id/tv_totalPrice"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="@dimen/item_content_height"
        android:gravity="center"
        android:text="@string/item"/>

</LinearLayout>